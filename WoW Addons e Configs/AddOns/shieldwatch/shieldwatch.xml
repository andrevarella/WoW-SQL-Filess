		<Scripts>
			<OnLoad>
			    self:SetBackdropColor(0, 0, 1, 0.5);
			    shieldwatch_OnLoad(self);
			</OnLoad>
			<OnEvent>
			        shieldwatch_onevent(self,event,arg1,arg2,arg3,arg4,arg5,arg6,arg7,arg8,arg9,arg10,arg11,arg12,arg13,arg14,arg15)
			</OnEvent>
			<OnUpdate>
			        shieldwatch_onupdate(self,elapsed);
			</OnUpdate>
			<OnMouseDown>
				if ( arg1 == "LeftButton" and ( not shieldwatch_Options or not shieldwatch_Options["Lock"] ) ) then
					self:StartMoving();
				elseif ( arg1 == "RightButton" ) then
					ToggleDropDownMenu(1, nil, getglobal(self:GetName() .. "DropDown"), self:GetName(), 47, 15);
				end
			</OnMouseDown>
			<OnMouseUp>
				if ( arg1 == "LeftButton" ) then
					self:StopMovingOrSizing();
				end
			</OnMouseUp>
			<OnHide>
				self:StopMovingOrSizing();
			</OnHide>
		</Scripts>
